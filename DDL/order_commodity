-- .order_commodity definition

CREATE TABLE `order_commodity` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT '主键id',
  `commodity_id` bigint(20) NOT NULL COMMENT '商品id',
  `name` varchar(100) NOT NULL COMMENT '名称',
  `order_id` bigint(20) NOT NULL COMMENT '订单id',
  `count` varchar(100) NOT NULL COMMENT '数量',
  `price` varchar(100) NOT NULL COMMENT '价格',
  `tag` varchar(100) NOT NULL COMMENT '分类',
  `status` tinyint(4) NOT NULL DEFAULT '0' COMMENT '删除状态（0未删除，1已删除）',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;