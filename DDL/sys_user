-- .sys_user definition

CREATE TABLE `sys_user` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT '主键id',
  `user_name` varchar(100) NOT NULL COMMENT '用户名',
  `password` varchar(200) NOT NULL COMMENT '密码',
  `nick_name` varchar(100) NOT NULL COMMENT '昵称',
  `address` varchar(100)  COMMENT '送货地址',
  `role` varchar(100) DEFAULT '买家' COMMENT '角色',
  `phone` varchar(100) NOT NULL COMMENT '电话',
  `email` varchar(100) NOT NULL COMMENT '电子邮件',
  `last_time` datetime DEFAULT NULL COMMENT '最近登录时间',
  `status` tinyint(4) NOT NULL DEFAULT '0' COMMENT '删除状态（0未删除，1已删除）',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;